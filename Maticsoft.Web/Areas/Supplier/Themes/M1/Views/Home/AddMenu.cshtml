<script type="text/javascript">
    $("#ddValue").hide();
    $(function () {
        $("#ddNavType").change(function () {
            if ($(this).val() > 0) {
                //说明选择的是商品分类
                $("#txtNavURL").hide();
                $.ajax({
                    url: $Maticsoft.BasePath + "Home/LoadProductCategory",
                    type: "Post",
                    dataType: "Json",
                    success: function (data) {
                        var html = '<option value="0" selected="selected">请选择</option>';
                        for (var i = 0; i < data.length; i++) {
                            html += '<option value="' + data[i].split(':')[0] + '">' + data[i].split(':')[1] + '</option>';
                        }
                        $("#ddValue").append(html).show();
                    }
                });
                $("#ddValue").change(function () {
                    if ($(this).val() == 0) {
                        ShowFailTip("页面地址不能为空");
                        return false;
                    } else {
                        $("#txtNavURL").val($(this).val());
                    }
                });
            } else {
                $("#txtNavURL").show();
                $("#ddValue").hide();
                $("#ddValue option").remove();
                var url = $("#txtNavURL").val();
            }
        });
        $("#btnSave").click(function () {
            //确定按钮点击
            var menuName = $("#txtMenuName").val().trim();
            var navUrl = $("#txtNavURL").val().trim();
            var sequence = $("#txtSqueeze").val().trim();
            var openType = $("#ddlTarget").val().trim();
            var checked = $("#chkIsUsed").attr("checked");
            if (menuName == "") {
                ShowFailTip("请输入菜单名称");
                return false;
            }
            if (navUrl == "") {
                ShowFailTip("请输入菜单地址");
                return false;
            }
            if (sequence == "") {
                ShowFailTip("请输入显示顺序");
                return false;
            }
            if (is_number(sequence)) {
                ShowFailTip("显示顺序只能为数字");
                return false;
            }

            $.ajax({
                url: $Maticsoft.BasePath + "Home/SubmitMenu",
                type: "POST",
                data: {
                    menuName: menuName,
                    navUrl: navUrl,
                    sequence: sequence,
                    openType: openType,
                    checked: checked,
                    submitType: "Add"
                },
                success: function (data) {
                    if (data == "ok") {
                        ShowSuccessTip("添加成功！");
                    } else {
                        ShowFailTip("添加失败！");
                    }
                    window.location = $Maticsoft.BasePath + "Home/SupplierMenu";
                }
            });
        });
        $("#btnCancle").click(function () {
            window.location = $Maticsoft.BasePath + "Home/SupplierMenu";
        });
    });

</script>
