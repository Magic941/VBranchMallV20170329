@{
    Layout = "~/Areas/Supplier/Themes/M1/Views/Shared/_SupplierLayout.cshtml";
}
@model List<Maticsoft.WeChat.Model.Core.Action>
<link href="/admin/css/admin.css" type="text/css" rel="stylesheet" charset="utf-8" />
<script src="/admin/js/jquery-1.7.2.min.js" type="text/javascript"></script>
<link href="/Scripts/msgbox/css/msgbox.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/msgbox/js/msgbox.js" type="text/javascript"></script>
<link href="/Scripts/colorbox/colorbox.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/colorbox/jquery.colorbox-min.js" type="text/javascript"></script>
<link href="/Scripts/jqueryui/jquery-ui-1.8.19.custom.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/jqueryui/jquery-ui-1.8.19.custom.min.js" type="text/javascript"></script>
<script src="/Areas/Supplier/Themes/M1/Content/Scripts/AddCommand.helper.js" type="text/javascript"></script>
<div class="mar30">
    <div class="contenttitle2">
        <h3>
            微信指令管理
        </h3>
        <small class="desc">您可以进行添加微信指令操作 </small>
    </div>
    <table style="width: 100%;" cellpadding="2" cellspacing="1" class="border">
        <tr>
            <td class="tdbg">
                <table cellspacing="0" cellpadding="3" width="100%" border="0">
                    <tr>
                        <td class="td_class">
                            指令名称：
                        </td>
                        <td height="25">
                            <input type="text" name="Name" id="Name" value="" style="width: 250px" tabindex="1" />
                        </td>
                    </tr>
                    <tr>
                        <td class="td_class">
                            对应操作：
                        </td>
                        <td height="25">
                            @if (Model != null)
                            {        
                                <select name="dropAction" id="dropAction">
                                    <option value="-1">请选择...</option>
                                    @foreach (var item in Model)
                                    {
                                        <option value=@item.ActionId>@item.Name</option>
                                    }
                                </select>
                            }
                            <select id="ddTarget" name="ddTarget">
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="td_class">
                            显示顺序：
                        </td>
                        <td height="25">
                            <input type="text" name="txtSequence" id="txtSequence" style="width: 250px" value="" />
                        </td>
                    </tr>
                    <tr>
                        <td class="td_class">
                            解析类型：
                        </td>
                        <td height="25">
                            <select style="width: 200px" id="ddParseType">
                                <option value="0">长度</option>
                                <option value="1">特殊字符</option>
                            </select>
                            <input type="text" name="txtParseType" id="txtParseType" value="" />
                        </td>
                    </tr>
                    <tr>
                        <td class="td_class">
                            是否启用：
                        </td>
                        <td height="25">
                            <input type="checkbox" name="chkStatus" id="chkStatus" checked="True" />是
                        </td>
                    </tr>
                    <tr>
                        <td class="td_class">
                            导航菜单描述：
                        </td>
                        <td height="25">
                            <textarea id="Remark" name="Remark" style="width: 250px" maxlength="50" rows="5"
                                cols="3"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td class="td_class">
                        </td>
                        <td height="25">
                            <div class="form stdform">
                                <input type="button" name="name" id="btnSave" value="保存" class="adminsubmit_short" />
                                &nbsp;&nbsp;
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <label id="lblMsg" style="color: Red">
                            </label>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>
<br />
</div> 