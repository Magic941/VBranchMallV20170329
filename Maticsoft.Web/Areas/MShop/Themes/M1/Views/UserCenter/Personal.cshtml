@{
    Layout = "/Areas/MShop/Themes/M1/Views/Shared/_BaseLayout.cshtml";
    ViewBag.Title = "修改信息";
}
@model Maticsoft.Model.Members.UsersExpModel  
<link href="/Areas/MShop/Themes/M1/Content/Css/UserCenter/userstyle.css" rel="stylesheet" type="text/css" />
<script src="/Areas/MShop/Themes/M1/Content/Scripts/UserCenter/updateuserinfo.js" type="text/javascript"></script>
<script src="/Scripts/jqueryui/JqueryDataPicker4CN.js" type="text/javascript"></script>
<link href="/Scripts/jqueryui/jquery-ui-1.8.19.custom.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/jqueryui/jquery-ui-1.8.19.custom.min.js" type="text/javascript"></script>
<style type="text/css">
    select {
        width: 80px;
    }
</style>
<script type="text/javascript">
    $(function () {
        /***日期控件***/
        $("[id$='Birthday']").datepicker({ dateFormat: "yy-mm-dd", yearRange: ("1900:" + new Date().getFullYear()) });
        $.datepicker.setDefaults($.datepicker.regional['zh-CN']);

        $('select').addClass('logininput');


        var constellation = $("#hfConstellation").val();
        var personalstatus = $("#hfPersonalStatus").val();
        var sex = $("#hfSex").val();
        if (sex == "1") {
            $("#radman").attr("checked", true);
            $("#radwoman").attr("checked", false);
        }
        if (sex == "0") {
            $("#radman").attr("checked", false);
            $("#radwoman").attr("checked", true);
        }

        if ($("#radman").click(function () {
            $("#radwoman").attr("checked", false);
        }));

        if ($("#radwoman").click(function () {
            $("#radman").attr("checked", false);
        }));
        $("#dropConstellation").val(constellation);

        $("#dropPersonalStatus").val(personalstatus);
    });
</script>

<div class="top">
    <span><a href="@(ViewBag.BasePath)u">&lt;返回</a></span>
    @Html.Partial("/Areas/MShop/Themes/M1/Views/Partial/_HeadRight.cshtml")
</div>

<div style="background: #F2F2F2">&nbsp;</div>
@*<div class="index_h1"  style="background:#F2F2F2">个人资料</div>*@
<div class="logincontent" style="background: #F2F2F2">
    <span class="tipClass"></span>

    @if (Model != null)
    {
        <input id="hfConstellation" type="hidden" value="@Model.Constellation"   />
        <input id="hfPersonalStatus" type="hidden" value="@Model.PersonalStatus"  />
        <input id="hfSex" type="hidden" value="@Model.Sex"  />
        <div>
            <span title="用户名">@Model.UserName</span>

            <div class="txterror tipClass">
                &nbsp;
            </div>
        </div>
        <div>
            <input type="text" value="@Model.NickName"   id="txtNickName" placeholder = "昵称" name="txtNickName" class="logininput">
            <br />
            <div id="nciknameTip" class="txterror tipClass">
                &nbsp;
            </div>
        </div>
        
        <div>
            <input type="text" value="@Model.TrueName"   id="txtTrueName" placeholder = "真实姓名" name="txtTrueName" class="logininput">
            <br />
            <div id="TrueNameTip" class="txterror tipClass">
                &nbsp;
            </div>
        </div>
 
        <div>
            <input id="txtEmail" name="txtEmail" type="text" value="@Model.Email"  placeholder = "Email"  class="logininput"><br />
            <div id="emailTip" class="txterror tipClass">
                &nbsp; 
            </div>
        </div>
        <div>
            <input type="radio" name="radman" value="1" id="radman" class="dan" /><label>男</label>
            <input type="radio" name="radwoman" value="0" id="radwoman" class="dan" /><label>女</label>
            <br />
            <div id="sexTip" class="txterror tipClass">
                &nbsp; 
            </div>
        </div>
        <div>
            <input id="txtPhone" name="txtPhone" type="text" value="@Model.Phone" placeholder = "手机号码" class="logininput" />
            <div id="phoneTip" class="txterror tipClass">
                &nbsp; 
            </div>
        </div>
        
        <div>
            <input id="txtTelPhone" name="txtTelPhone" type="text" value="@Model.TelPhone"  placeholder = "固定电话"    class="logininput" /><br />
            <div id="telphoneTip" class="txterror tipClass">
                &nbsp;
            </div>
        </div>
        
        <div id="divaddressselect" style="display: none;">
            <script src="/Scripts/jquery/jquery.guid.js" type="text/javascript"></script>
            <input type="hidden" id="hfSelectedNode" value="@(Maticsoft.Common.Globals.SafeInt(Model.Address, 0))" />
            <script src="/Scripts/jquery/Maticsoft.selectregion.js" handle="/RegionHandle.aspx" isnull="true" type="text/javascript"></script>
            <br />
            <div id="addressTip" class="txterror tipClass">
                &nbsp;
            </div>
        </div> 

        <div>
            @if (Model.Birthday.HasValue)
            {
                <input id="txtBirthday" name="txtBirthday" placeholder = "生日" type="text" value="@Model.Birthday.Value.ToString("yyyy-MM-dd")"   class="logininput"/>
            }
            else
            {
                <input id="txtBirthday" name="txtBirthday" type="text" placeholder="生日" class="logininput" />
            }
            <br />
            <div id="birthdayTip" class="txterror tipClass">
            </div>
        </div>
                                 
                                      
                                  
        <div>

            <select name="dropConstellation" id="dropConstellation" style="height: 28px; width: 80px">
                <option value="0">请选择</option>
                <option value="1">水瓶座</option>
                <option value="2">双鱼座</option>
                <option value="3">白羊座</option>
                <option value="4">金牛座</option>
                <option value="5">双子座</option>
                <option value="6">巨蟹座</option>
                <option value="7">狮子座</option>
                <option value="8">处女座</option>
                <option value="9">天秤座</option>
                <option value="10">天蝎座</option>
                <option value="11">射手座</option>
                <option value="12">魔羯座</option>
            </select><br />
            <div id="dropconstellTip" class="txterror tipClass">
                &nbsp;
            </div>
        </div> 
        <div>

            <select name="dropPersonalStatus" id="dropPersonalStatus" class="logininput" style="height: 28px; width: 80px;">
                <option value="0">请选择</option>
                <option value="1">白领</option>
                <option value="2">学生</option>
            </select><br />
            <div id="droppersonalstatesTip" class="txterror tipClass">
                &nbsp;
            </div>
        </div>
        <div>

            <textarea id="txtSingature" name="txtSingature" class="logininput" placeholder="个性签名"
                rows="5" cols="20" style="height: 80px;">@Model.Singature</textarea>

            <br />
            <div id="remarkTip" class="txterror tipClass">
            </div>
        </div> 
        
        <div>
        </div>
        <div>
            @*<input type="button" value="确认修改" id="btnUpdatepersonal" onclick="submit();" class="sub_btn">*@
            <a href="javascript:void(0);" id="btnUpdatepersonal" onclick="submit()" style="font-size: 16px; color: white;" class="sub_btn">确认修改</a>
        </div>
    }

</div>


