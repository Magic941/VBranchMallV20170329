 @{
     Layout = "/Areas/MShop/Themes/M1/Views/Shared/_BaseLayout.cshtml";
     ViewBag.Title = "个人中心";
     ViewBag.Keywords = "个人中心";
     ViewBag.Description = "个人中心";
 }
 @model Maticsoft.Model.Members.UsersExpModel
<link href="/Areas/MShop/Themes/M1/Content/Css/UserCenter/userstyle.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/jquery/jquery.guid.js" type="text/javascript"></script>
 <div class="top"> <span>个人中心</span>
     @Html.Partial("/Areas/MShop/Themes/M1/Views/Partial/_HeadRight.cshtml")
</div>
 
<div class="yy"></div>
<div class="home_zl">
    <div class="home_tx">
      <img id="imgPhoto" alt="头像" src="/Upload/User/Gravatar/@(Model.UserID).jpg?id=@DateTime.Now" width="50px" height="50px" onerror="this.onerror='';this.src='/Upload/User/Gravatar/nophoto.png'"> 
    </div>
  <div class="home_name"><span>@Model.NickName</span><span style="display:none;">钻石会员</span> </div>
  <div class="home_sj" style="height:21px;" >
      <div class="a" style="overflow:hidden; height:21px;"><span style="height: 21px;">余额：<strong> @(Model.Balance!=null?Model.Balance.Value.ToString("C"):"￥ 0:00") </strong></span>
      </div>
     <div class="a" style="overflow:hidden; height:21px;"><span style="height: 21px;">积分：<strong> @Model.Points </strong></span>
              </div>               
  </div>
</div>
<div class="home_menu home_menu_noicon">
     <ul>
        <li class="hb1"><a href="@(ViewBag.BasePath)u/Personal" >个人资料</a></li>
        <li class="hb1 hb2"><a href="@(ViewBag.BasePath)u/ChangePassword" >修改密码</a></li>
        <li class="hb1 hb2"><a href="@(ViewBag.BasePath)u/PointsDetail"  >我的积分</a></li>
        <li class="hb1 hb2"><a href="@(ViewBag.BasePath)u/Exchanges"  >积分兑换</a></li>
        <li class="hb2"><a href="@(ViewBag.BasePath)u/MyCoupon"  >我的优惠券</a></li> 
    </ul>
    <ul>
        <li class="hb1"><a href="@(ViewBag.BasePath)u/Orders"  >我的订单</a></li>
        <li class="hb2"><a href="@(ViewBag.BasePath)u/MyFavor"  >我的收藏</a></li>
        @*<li class="hb2"><a href="@(ViewBag.BasePath)u/UserCard"  >我的会员卡</a></li> *@
        <li class="hb2"><a href="@(ViewBag.BasePath)u/ApplyAgent"  >申请好代</a></li>
        <li class="hb2"><a href="@(ViewBag.BasePath)u/ApplyShop?ApplyType=0"  >申请健康分销店</a></li>
        <li class="hb2"><a href="@(ViewBag.BasePath)u/ApplyShop?ApplyType=1"  >申请健康服务店</a></li>
    </ul>
    <ul>
        <li class="hb1 hb2"><a href="@(ViewBag.BasePath)u/Inbox"  >收件箱</a></li>
        <li class="hb1 hb2"><a href="@(ViewBag.BasePath)u/Outbox"  >发件箱</a></li>
    </ul> 
    <div style="display:none;" id="div_logout">
       <a href="@(ViewBag.BasePath)account/Logout"> <input type="button" value="退出" id="order_tuan_submit" onclick="return " class="sub_btn"></a>
    </div>
</div>



<script type="text/javascript">
    if (window.navigator.userAgent.indexOf('Maticsoft_Shop_APP') == -1) {
        //非手机APP访问
        $('#div_logout').show();
    }
    </script>
