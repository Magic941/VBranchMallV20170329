<script type="text/javascript">  
    
    $(function () {
        var sex = $("#hfSex").val();
        if (sex == "1") {
            $("#radman").attr("checked", true);
            $("#radwoman").attr("checked", false);
        }
        if (sex == "0") {
            $("#radman").attr("checked", false);
            $("#radwoman").attr("checked", true);
        }

        if ($("#radman").click(function () {
            $("#radwoman").attr("checked", false);
        }));

        if ($("#radwoman").click(function () {
            $("#radman").attr("checked", false);
        }));
    })

</script> 
