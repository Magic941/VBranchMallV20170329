<style type="text/css">
         .advert_ptd {
     width:100%;
     background:url(/Areas/MShop/Themes/M1/Content/img/wd_2015.png) no-repeat center top;
	 background-size: cover;
     overflow:hidden;
     padding:20px 0 10px 0;
    }
.advert_ptd em {
    width:3rem;
    height:3rem;
    float:left;
    display:block;

    }
.advert_ptd em img {
    width:100%;
    display:block;
    }
.advert_ptd p {
    float:left;
    margin:0 auto;
    font-size:0.8rem;
    padding-top:5px;
    }
.advert_ptd b,.advert_ptd i {
    width:10rem;
     margin:0 auto;
    display:block;
    }
.advert_ptd i {
    font-style:normal;
    }
.advert_ptd b {
    color:#c8000b;
    }
.advert_ptd a {
    width:5rem;
    height:30px;
    line-height:30px;
    font-size:0.8rem;
    text-align:center;
    float:right;
    background:#f35a1e;
    color:#fff;
    border-radius:10px;
    box-shadow: 3px 3px 0 #d0d0d0;
    margin-top:5px;
    }
</style>
<div class="advert_ptd">
    <div class="" style="width:95%; margin:0 auto;">
        <em><img src="/Areas/MShop/Themes/M1/Content/img/2015_wd.png" /></em>
        <p>
          

            <b>欢迎来到@(ViewBag.TrueName)的 @(ViewBag.ShopTypeName) </b>
            <i>联系电话：@ViewBag.Phone</i>
        </p>
     
        @if(ViewBag.IsApp)
        {
            if (ViewBag.IsStudy)
            {
                <a class=""  href="http://weidian.com/?userid=326045664" >我要开微店</a>
            }
            else
            {
             <a class="" href="@(ViewBag.BasePath)p/d/1157226/0/0">我要开微店</a>
            }
        }
        else
        {
            if (ViewBag.IsStudy)
            {
                <a class=""  href="http://weidian.com/?userid=326045664" >我要开微店</a>
            }
            else
            {
              <a style="background:#808080;" class="" >我要开微店</a> 
            }
        }
    </div>
</div>
