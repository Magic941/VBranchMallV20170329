                                <a class="btn btn-important-large" style="" id="btnFindPwd">确定</a>
                                <div class="Tip" id="checkTip">@ViewBag.CheckResult</div>
                            </div>
                          
                        </div>
                       }
                    </div>
            
                </div>
            </div>
        </div>
    </div>