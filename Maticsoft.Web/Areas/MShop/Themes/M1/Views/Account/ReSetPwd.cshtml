                <h2>
                    设置新密码</h2>
            </div>
            <div class="bd">
                <div id="tab_regi">
                    <div class="J_tab_panel">

                       @using (Html.BeginForm("ReSetPwd", "Account", FormMethod.Post, new { Class = "form form-regi", id = "formfindpwd" }))
                       {
                            <span style="text-align: center; color: Red">  @Html.ValidationMessage("Error")</span>
