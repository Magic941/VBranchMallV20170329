@{
    ViewBag.Title = "找回密码";
    Layout = "~/Areas/MShop/Themes/M1/Views/Shared/_BaseLayout.cshtml";
}
@section head{
    <link rel="stylesheet" type="text/css" href="/Areas/MShop/Themes/M1/Content/Css/msg,btn,form,reg-base,reg.css?v=12022713" />

    <link rel="stylesheet" type="text/css" href="/Areas/MShop/Themes/M1/Content/Css/css/login/login.css" />
    <script src="/Areas/MShop/Themes/M1/Content/Scripts/FindPwdByPhone.js"></script>
    <script src="/Scripts/jqueryui/jquery-ui-1.9.2.custom.js" type="text/javascript"></script>
}
@model Maticsoft.ViewModel.Shop.RegisterModel
<script>
    $(function () {
        $("#btnVerify").click(function () {
            Math.random() * 24
            $("#tImg").attr("src", "/SmsValidateCode.aspx?Guid=" + Math.random() * 100);
        });
        $("#btnFindPwd").click(function () {
            if (usernamecheck() && smscodecheck()) {

                $("#formfindpwd").submit();
            }
            else {
                CheckFailed("checkTip", "*手机号或手机验证码有误")
            }
        });

        //点击回复触发
        $("#aUserAgreement").click(function () {
            $("#divUserAgreement").dialog(dialogOpts); //弹出‘用户协议’层  
        });

        //dialog层中项的设置
        var dialogOpts = {
            title: "用户注册协议",
            width: 700,
            height: 600,
            modal: true,
            buttons: {
                "同意": function () {
                    $("#Chk").attr("checked", "checked"); //选中同意
                    $(this).dialog("close"); //关闭层
                },
                "取消": function () {
                    $(this).dialog("close"); //关闭层
                }
            }
        };


    })
</script>

<style>

    .seach_bg {
        background: #f2f2f2;
    }

    .mem_ber_potl {
    }

        .mem_ber_potl ul {
            padding: 0;
            width: 98%;
            margin: 0 auto;
        }

        .mem_ber_potl li {
            width: 100%;
            margin: 0 auto;
        }

    .regi_ster input {
        width: 100%;
        height: 2.5rem;
        border: 1px solid #cacaca;
        border-radius: 5px;
        /*padding-left:5px;*/
        display: block;
        margin: 0;
    }

    .regi_steee {
        margin-top: 18px;
        height: 70px;
    }

        .regi_steee input {
            width: 45%;
            height: 3rem;
            border: 1px solid #cacaca;
            border-radius: 5px;
            padding-left: 5px;
            float: left;
        }

        .regi_steee a {
            width: 45%;
            height: 3.2rem;
            line-height: 3.2rem;
            text-align: center;
            background: #cacaca;
            float: right;
            display: block;
            /*padding-right:10px;*/
            color: #6884f2;
            /*margin-left:10px;*/
