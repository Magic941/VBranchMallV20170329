<div class="top">
    <span>找回密码</span>
    <div class="header-btn fr">
        <a href="@ViewBag.BasePath" style="margin: 8px 2px 8px 0; padding-top: 8px; height: 22px">
            <img src="/Areas/MShop/Themes/M1/Content/images/home.png" width="20" height="18">
        </a>
    </div>
</div>
<div class="w760">
