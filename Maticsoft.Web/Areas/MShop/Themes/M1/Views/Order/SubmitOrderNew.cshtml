            TotalPrice = Model.SupplierPriceList.Where(m => m.SupplierId == item.Key).First().TotalAdjustedPrice;
            SupplierPreferentialPrice = PreferentialType == 1 ? TotalPrice / (RateValue / 100) - TotalPrice : RateValue;
        }
