        var RateValue = 0M;
        string ActiveName = "";
        var TotalPrice = 0M;
        decimal SupplierPreferentialPrice = 0;
        var s_model = Model.SupplierPriceList.Where(m => m.SupplierId == item.Key && (m.PreferentialType == 1 || m.PreferentialType == 2)).ToList();
