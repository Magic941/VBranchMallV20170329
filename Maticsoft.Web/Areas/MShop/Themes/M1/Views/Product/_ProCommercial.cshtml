@{
    Layout = "/Areas/MShop/Themes/M1/Views/Shared/_BaseLayout.cshtml";
    ViewBag.Title = "每周星品";
}
@section head{
    <script type="text/javascript" src="/Areas/MShop/Themes/M1/Content/Scripts/common.js?v=201304011"></script>
    <script type="text/javascript" src="/Areas/MShop/Themes/M1/Content/Scripts/spin.min.js"></script>
    <script src="/Areas/MShop/Themes/M1/Content/Scripts/jquery.lazyload.js" type="text/javascript"></script>
    <link href="/Areas/MShop/Themes/M1/Content/Css/index.css" rel="stylesheet" type="text/css" />
    <link href="/Areas/MShop/Themes/M1/Content/Css/indexnew.css" rel="stylesheet" type="text/css" />
}
@using Webdiyer.WebControls.Mvc
@model List<Maticsoft.Model.Shop.Products.ProductInfo>
<style>
    .boutique_cn {
        width: 100%;
        padding-bottom: 10px;
    }

        .boutique_cn a, .boutique_cn a img {
            display: block;
        }

            .boutique_cn a img {
                width: 100%;
            }
</style>
<style type="text/css">
    .lazy {
        background: url('/Areas/MShop/Themes/M1/Content/images/defalutlogo.jpg') no-repeat center;
    }
</style>
<script type="text/javascript">
    $(function () {
        $("img.lazy").lazyload({
            threshold: 150,
            effect: "fadeIn"
        });
    });
</script>

<div class="top">
    <span><a href="@(ViewBag.BasePath)u">&lt;返回</a></span>
    @Html.Partial("/Areas/MShop/Themes/M1/Views/Partial/_HeadRight.cshtml")
</div>

<div style="background: #040360;">
    <div class="boutique_cn">
        <a href="javascript:;">
            <img class="lazy" src="/Areas/MShop/Themes/M1/Content/img/2222.png" />
        </a>
        <a href="javascript:;">
            <img class="lazy" src="/Areas/MShop/Themes/M1/Content/img/2223.png" />
        </a>
        <a href="javascript:;">
            <img class="lazy" src="/Areas/MShop/Themes/M1/Content/img/2224.png" />
        </a>
    </div>

    <div class='Wechat_cn'>
        <ul class=' clearfix'>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                <li>
                    <div class="Wechat_baf">
                        <a href="@(ViewBag.BasePath)p/d/@item.ProductId/0/0">
                            <img class="lazy"  data-original="@Maticsoft.Web.Components.FileHelper.GeThumbImage(item.ThumbnailUrl1, "T300X300_")" /></a>
                    </div>
                    <p><a href="@(ViewBag.BasePath)p/d/@item.ProductId/0/0">@item.ProductName</a></p>
                    <div class="Wechat_sell">
                        <em>￥@item.LowestSalePrice.ToString("F")</em>
                    </div>
                </li>
                }
            }
        </ul>
    </div>
</div>
