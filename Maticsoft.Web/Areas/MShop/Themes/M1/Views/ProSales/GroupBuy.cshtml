</div>
<table width="100%" height="55" border="0" cellspacing="0" cellpadding="0" class="pro_list_lm">
    <tr>
        <td class="modList" mod="hot">
            <a href="@(ViewBag.BasePath)ProSales/GroupBuy?regionId=@regionId&cid=@(cid)&mod=hot">销量</a>
        </td>
        <td class="modList" mod="price">
            <a href="@(ViewBag.BasePath)ProSales/GroupBuy?regionId=@regionId&cid=@(cid)&mod=price">价格</a>
        </td>
        <td class="modList" mod="new">
            <a href="@(ViewBag.BasePath)ProSales/GroupBuy?regionId=@regionId&cid=@(cid)&mod=new">新品</a>
        </td>
    </tr>
</table>
@{Html.RenderPartial("_GroupBuyList", Model);}



