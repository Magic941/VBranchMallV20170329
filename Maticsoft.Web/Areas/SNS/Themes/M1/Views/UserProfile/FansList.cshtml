                        <p class="myfans_a2_w1">
                            <a href="@(ViewBag.BasePath)User/Posts?uid=@(item.ActiveUserID)">@item.NickName</a></p>
                        <p class="myfans_a2_w2">
                            粉丝@(@item.FansCount)人</p>
                        <p class="myfans_a2_w2">
                            @item.Singature</p>
                    </div>
                    <div class="myfans_a2_x">
                        <div class="myfans_a2_x1" id="maticsoftIsBothway@{@item.ActiveUserID}">
                            @if (ViewBag.IsCurrentUser == false)
                            {
                                if (item.IsFellow == true)
                                {
                                <a href="javascript:;" class="FellowUser"  UserId="@item.ActiveUserID"   autotest="false" style="display:none">
