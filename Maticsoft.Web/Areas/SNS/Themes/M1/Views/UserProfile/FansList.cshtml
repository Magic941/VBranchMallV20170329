    <!-- FansList BEGIN -->
    @if (Model != null)
    {
        foreach (var item in Model)
        {
        <div class="myfans">
            <div class="myfans_a">
                <div class="myfans_a1">
                    <a href="@(ViewBag.BasePath)User/Posts?uid=@(item.ActiveUserID)" title="@item.ActiveUserID">
