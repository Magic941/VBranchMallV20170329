                                        <img src="/Areas/SNS/Themes/M1/Content/images/qx.png" /></a>
                                }
                            }
                            else
                            {
                                if (item.Type == 1)
                                {
                                <a href="javascript:;" class="FellowUser"  UserId="@item.ActiveUserID"  style="display:none" autotest="false">
                                    <img src="/Areas/SNS/Themes/M1/Content/images/gz.png" /></a> <a href="javascript:;" class="UnFellowUser"  UserId="@item.ActiveUserID" >
                                        <img src="/Areas/SNS/Themes/M1/Content/images/qx.png" /></a>
                               }
                               else
                               {
                                <a href="javascript:;" class="FellowUser"  UserId="@item.ActiveUserID"   autotest="false">
                                    <img src="/Areas/SNS/Themes/M1/Content/images/gz.png" /></a> <a href="javascript:;" style="display:none" class="UnFellowUser"  UserId="@item.ActiveUserID" >
                                        <img src="/Areas/SNS/Themes/M1/Content/images/qx.png" /></a>
                               
                              }
                            }
