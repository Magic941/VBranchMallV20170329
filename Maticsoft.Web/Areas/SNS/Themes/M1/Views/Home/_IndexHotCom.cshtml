@model  List<Maticsoft.Model.CMS.Content>
@if (Model != null && Model.Count > 0)
{
    <ol id="comment-rank-week" class="unit-rank-list">
        @for (int i = 0; i < Model.Count; i++)
        {
            <li class="rank-top"><span class="rank-number">@(i + 1)</span> <a class="rank-main" href='@(ViewBag.BasePath)Article/ArticleDetail?id=@Model[i].ContentID'
                                                                    target="_blank" title="@Model[i].Title">@Maticsoft.Common.StringPlus.SubString(Model[i].Title, 15, "...")
            </a><span class="rank-extra">@(Model[i].ComCount)评</span> </li>
        }
    </ol>
}
