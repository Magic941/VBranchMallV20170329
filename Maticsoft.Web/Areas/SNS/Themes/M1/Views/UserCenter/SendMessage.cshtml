@{
    Layout = "~/Areas/SNS/Themes/M1/Views/Shared/_UserCenterLayOut.cshtml";
}
<script src="/Areas/SNS/Themes/M1/Content/Scripts/sendmessage.js" type="text/javascript"></script>
<input type="hidden" id="currentpage" value="span_8"/>
<div class="material_con">
    <h1>
        <p class="material_con_a">
            发消息给：</p>
        <p class="material_con_b">
            (<span>*</span>为必须填写项)</p>
    </h1>
    <div class="material_con_c" style="width: 100%;">
        <table width="100%" border="0">
            <tbody>
                <tr>
                    <td width="100%" height="45px" align="right">
                        <span>*</span>发消息给：
                    </td>
                    <td width="308">
                        <input id="txtNickName" name="txtNickName" type="text" value="" style="width: 250px;
                            color: rgb(153, 153, 153);" class="g-ipt" />
                    </td>
                    <td width="195">
                        <div id="nciknameTip" style="width: 280px; margin: 0px; padding: 0px; background-color: transparent;
                            background-position: initial initial; background-repeat: initial initial;">
                            <!--提示信息开始-->
                            <!--提示信息结束-->
                        </div>
                    </td>
                </tr>
                   <tr>
                    <td width="100%" height="45px" align="right">
                        <span>*</span>主题：
                    </td>
                    <td width="308">
                        <input id="txtTitle" name="txtTitle" type="text" value="" style="width: 250px;
                            color: rgb(153, 153, 153);" class="g-ipt" />
                    </td>
                    <td width="195">
                        <div id="titleTip" style="width: 280px; margin: 0px; padding: 0px; background-color: transparent;
                            background-position: initial initial; background-repeat: initial initial;">
                            <!--提示信息开始-->
                            <!--提示信息结束-->
                        </div>
                    </td>
                </tr>
                <tr>
                    <td width="100%" height="45px" align="right" valign="top">
                        <span>*</span>消息内容：
                    </td>
                    <td colspan="2">
                        <textarea id="txtContent" name="txtContent" style="height: 80px; color: rgb(153, 153, 153);"
                            class="g-ipts" rows="3" cols="1"></textarea>
                            <br />
                    </td>
                </tr>
                <tr>
                <td width="100%" height="15px" align="right">
                </td>
                <td width="308">
                    <div id="contentTip" style="width: 280px; margin: 0px; padding: 0px; background-color: transparent;
                        background-position: initial initial; background-repeat: initial initial;">
                        <!--提示信息开始-->
                        <!--提示信息结束-->
                    </div>
                </td>
                </tr>
                <tr>
                    <td width="100%" height="45px" align="right">
                        &nbsp;
                    </td>
                    <td>
                        <br />
                        <a title="保存" href="javascript:;" onclick="submit();">
                            <img src="/Areas/SNS/Themes/M1/Content/images/write.jpg" style="margin-left: 10px;"></a>
                    </td>
                    <td>
                        &nbsp;
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
