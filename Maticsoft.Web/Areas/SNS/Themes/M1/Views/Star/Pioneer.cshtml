        </ul>
    </div>
</div>
@if (Model.HotStarList != null && Model.HotStarList.Count > 0)
{
    <div class="pioneer_star">
        <div class="pioneer_star_bj">
            <div class="cor">
                <img src="/Areas/SNS/Themes/M1/Content/images/pioneer_2.jpg" /></div>
            <p class="csr">
                编辑推荐</p>
            <div class="clear">
            </div>
        </div>
        <div class="pioneer_star_img">
            @foreach (var item in Model.HotStarList)
            {
                <div class="code HotStar">
                    <a href="@(ViewBag.BasePath)User/Posts/@item.UserId">
                        <img ref="@item.UserGravatar" alt="@item.NickName" /></a>
                    <div class="code_ba">
                    </div>
                    <div class="code_ca">
                        <div class="code_ca_a">
                            <p class="code_ca_a1">
                                <a href="@(ViewBag.BasePath)User/Posts/@item.UserId">@item.NickName</a></p>
                            <p class="code_ca_a2">
                                 <a href="javascript:;" class="FellowUser"  UserId="@item.UserId"  >
                                    <img src="/Areas/SNS/Themes/M1/Content/images/poineer_5.png" /></a> <a href="javascript:;" class="UnFellowUser" style="display:none" UserId="@item.UserId"  >
                                        <img src="/Areas/SNS/Themes/M1/Content/images/qx.png" /></a></p>
                        </div>
                        @if (!String.IsNullOrWhiteSpace(item.Singature))
                        {
                        <div class="code_ca_b">
                            @item.Singature</div>
                        }
                    </div>
                </div>
            }
        </div>
        <div class="clear">
        </div>
    </div>
}
