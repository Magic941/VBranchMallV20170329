<div class="pioneer">
    <div class="pioneer_a">
        <ul>
            @if (ViewBag.Type == "Index")
            {
                <li><a href="@(ViewBag.BasePath)Star/Pioneer"  class="pion1">综合推荐</a></li>
            }
            else
            {
                <li><a href="@(ViewBag.BasePath)Star/Pioneer" >综合推荐</a></li>
            }
            @Html.Action("StarType", "Star")
