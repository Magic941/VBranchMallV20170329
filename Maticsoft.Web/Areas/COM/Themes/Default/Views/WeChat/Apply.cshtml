@{
    Layout = "/Areas/COM/Themes/Default/Views/Shared/_SitePageLayout.cshtml";
    ViewBag.Title = "报名申请";
}
<!--在线报名开始--->
<link href="/Scripts/jquery.mobile/jquery.mobile-1.3.1.css" rel="stylesheet" type="text/css" />
<script src="/Areas/COM/Themes/Default/Content/Scripts/Apply.js" type="text/javascript"></script>
<link href="/Scripts/msgbox/css/msgbox.css" rel="stylesheet" />
<script src="/Scripts/msgbox/js/msgbox.js"></script>
<div class="content content_view">
            <fieldset>
                <legend>在线报名 </legend>
                <div id="gbook_input" style="display: inline-block; width: 100%;">
                        <legend class="jq-ui-forms" data-role="none" >用户姓名</legend>
                    <div style="display: inline-block; width: 100%;"   data-role="none">
                        <input    type="text"   maxlength="50" id="username" />
                    </div>
                        <legend>手机</legend>
                        <input type="text"  maxlength="11" id="Phone"  />
                  
                        <div style="display: inline-block; width: 100%;" class="jq-ui-forms" data-role="none">
                        <legend class="jq-ui-forms" data-role="none">邮箱</legend>
                    </div>
                    <div style="display: inline-block; width: 100%;" class="jq-ui-forms" data-role="none">
                        <input type="text"   maxlength="50" id="Email" />
                    </div>
                    <div style="display: inline-block; width: 100%;" class="jq-ui-forms" data-role="none">
                        <legend class="jq-ui-forms" data-role="none">年龄</legend>
                    </div>
                    <div style="display: inline-block; width: 100%;" class="jq-ui-forms" data-role="none">
                        <input type="text"   maxlength="2" id="age" />
                    </div>
                    <div style="display: inline-block; width: 100%;" class="jq-ui-forms" data-role="none">
                        <legend class="jq-ui-forms" data-role="none">性别</legend>
                    </div>
                    <div data-role="fieldcontain" class="ui-field-contain ui-body ui-br">
                        <input type="radio" name="radman" value="0" id="radman" checked="checked" />
                        <label for="radman">
                            男</label>
                        <input type="radio" name="radman" value="1" id="radwoman" />
                        <label for="radwoman">
                            女</label>
                    </div>
                  
                    <div style="display: inline-block; width: 100%;" class="jq-ui-forms" data-role="none">
                        <legend class="jq-ui-forms" data-role="none">地址</legend>
                    </div>
                    <div style="display: inline-block; width: 100%;" class="jq-ui-forms" data-role="none">
                        <input type="text"   maxlength="200" id="HouseAddress" />
                    </div>
                    <div style="display: inline-block; width: 100%;" class="jq-ui-forms" data-role="none">
                        <legend class="jq-ui-forms" data-role="none">内容</legend>
                    </div>
                    <div style="display: inline-block; width: 100%;" class="jq-ui-forms" data-role="none">
                        <textarea class="jq-ui-forms" maxlength="300" id="Description"></textarea>
                    </div>
                </div>
                <input type="button" value=" 提交 " id="btnEntryForm" class="button " data-role="none" />
                <input type="reset" name="clear_btn" value=" 重新填写 " class="button " data-role="none" />
            </fieldset>
            </form>
</div>
<!--在线报名结束-->
