@model Maticsoft.Model.CMS.Content          
<!--新闻咨询详细页 -->

<header class="header view">
    <span class="nowposition">
        <a href="javascript:;" onclick="pageload('Home','index','首页','_Index', '_Index');mainmenu(false);" class="ui-link">首页</a>
        <a href="javascript:;" onclick="pageload('Article','news@(ViewBag.AclassID)','@ViewBag.AclassName','News', 'News','@ViewBag.AclassID','-1','-1','-1','-1','-1','3');" class="ui-link">@ViewBag.AclassName</a>
        <a href="javascript:;"  class="ui-link aclassname" >@ViewBag.ClassName</a>
         <script type="text/javascript">
             hideclassname($('.aclassname').last());
        </script>
    </span>
</header>
@if (Model != null)
{ 
   <div class="content content_view">
        <h2 class="view_title">@Model.Title</h2>
        <div class="view_infos">*  来源 :@Model.BeFrom  * 作者 : @Model.CreatedUserName *  发表时间 :@Model.CreatedDate.ToString("yyyy-MM-dd") * 浏览 : @Model.PvCount</div>
       <article class="view_remark">@Html.Raw(Model.Description)</article>
        <div class="articleComment" id="news5commlist">
            <div class="commentTitle"> 相关评论 <small class="count">@Model.TotalComment</small>
                <small class="showAll">
                    <a onclick="pageloadComment('Comment','commenttype3_@(Model.ContentID)','@Model.Title','Index', 'Index','@Model.ContentID','3','6')"> 查看全部 </a>
                </small>
            </div>
            <dl class="commentInfo">
            </dl>
            <a onclick="pageloadComment('Comment','commenttype3_@(Model.ContentID)','@Model.Title','Index', 'Index','@Model.ContentID','3','6')" class="publishComment button"> 发表评论 </a>
        </div>

    </div>
    <div class="pagePrevNext controlgroup" style="display:none;">
        <span>
            <a onclick="" class="ui-link pagePrevlink">上一页</a>
        </span>
        <span>
            <a onclick="" class="ui-link pageNextlink">下一页</a>
        </span>
    </div>
 
}
    <!--</div>新闻咨询详细页 -->
