@model Maticsoft.Model.CMS.Content

<header class="header view">
    <span class="nowposition">
        <a href="javascript:;" onclick="pageload('Home','index','首页','_Index', '_Index');" class="ui-link">首页</a>
        <a href="javascript:;" onclick="pageload('Article','jobs@(ViewBag.AclassID)','@ViewBag.AclassName','News', 'Jobs','@ViewBag.AclassID','-1','-1','-1','-1','-1','3');" class="ui-link">@ViewBag.AclassName</a>
        <a href="javascript:;"  class="ui-link aclassname">@ViewBag.ClassName</a>
          <script type="text/javascript">
              hideclassname($('.aclassname').last());
        </script>
    </span>
</header>
@if (Model != null)
{ 
<div class="content content_view">
<h2 class="view_title">@Model.Title</h2>
<div class="view_remark">@Html.Raw(Model.Description)</div>
</div>
<div class="pagePrevNext controlgroup" style="display:none;">
<span>
<a   class="ui-link">下一条</a>
</span>
<span>
<a   class="ui-link">下一条</a>
</span>
</div>
}