@using Webdiyer.WebControls.Mvc
@using Maticsoft.Common;
@model PagedList<Maticsoft.Model.CMS.Content>

<header class="header view">
    <span class="nowposition">
        <a href="javascript:;" onclick="pageload('Home','index','首页','_Index', '_Index');mainmenu(false);" class="ui-link">首页</a>
        <a href="javascript:;" onclick="pageload('Article','news@(ViewBag.AclassID)','@ViewBag.AclassName','News', 'News','@ViewBag.AclassID','-1','-1','-1','-1','-1','3');" class="ui-link">@ViewBag.AclassName</a>
        <a href="javascript:;"  class="ui-link aclassname" >@ViewBag.classname</a>  <!--onclick="pageloadByPage('newsList_@(ViewBag.classID)page1','@ViewBag.classname','NewsList', 'NewsList','@ViewBag.classID','1');"-->

        <script type="text/javascript">
            hideclassname($('.aclassname').last());
        </script>

    </span>
</header>
@if (Model != null)
{ 
<div class="content content_list">
<ol class="listbox">
@foreach(var item in Model )
{
    <li onclick="pageload('Article','newsDetail_@(item.ContentID)','@item.Title','NewsDetail', 'NewsDetail','-1','@item.ContentID')">@item.Title</li>
}
</ol>
</div>
<div class="pagePrevNext controlgroup">
    <span>
        <a  class="ui-link pagePrevlink" >没有了</a>       
    </span>
    <span class="pagecount">
        <a class="ui-link">@ViewBag.pageIndex/@ViewBag.totalPage</a>
    </span>
    <span>
        <a class="ui-link pageNextlink">没有了</a>
    </span>
</div>
    <input type="hidden"  class="hidpageindexnewsListpage" value="@ViewBag.pageIndex" />//当前页码
    <input type="hidden"  class="hidtotalPagenewsListpage" value="@ViewBag.totalPage" />//总页码
    <script type="text/javascript">
        loadPrevNextBut('Article', "newsList_@(ViewBag.classID)page", "@ViewBag.classname", "@ViewBag.newslistaction", "NewsList", "@ViewBag.classID", '', "@ViewBag.topclass");        
    </script>           
}
