@using Webdiyer.WebControls.Mvc
@using Maticsoft.Common;
@model PagedList<Maticsoft.Model.CMS.Content>  
<header class="header view">
    <span class="nowposition">
        <a href="javascript:;" onclick="pageload('Home','index','首页','_Index', '_Index');" class="ui-link">首页</a>
        <a href="javascript:;" onclick="pageload('Article','products@(ViewBag.AclassID)','@ViewBag.AclassName','News', 'Products','@ViewBag.AclassID','-1','-1','-1','-1','-1','3');" class="ui-link">@ViewBag.AclassName</a>
        <a href="javascript:;"  class="ui-link aclassname" >@ViewBag.classname</a>  
        <script type="text/javascript">
            hideclassname($('.aclassname').last());
        </script>
    </span>
</header>
@if (Model != null)
{ 
<div class="content content_list">
<div class="ax-waterfall-list">

@foreach(var item in Model)
{
<a onclick="pageload('Article','productsDetailPhoto_@(item.ContentID)','@item.Title','NewsDetail', 'ProductsDetailPhoto','-1','@item.ContentID')" class="ui-link">
<div class="img" style="background-image: url(@item.ImageUrl);">
<img src="@item.ImageUrl" alt="@item.Title">
</div>
<div class="title">
<h3>@(Maticsoft.Common.StringPlus.SubString(item.Title, 15, ".."))</h3>
</div>
</a>
}



</div>
</div>
    
    
<div class="pagePrevNext controlgroup">
    <span>
        <a  class="ui-link pagePrevlink" >没有了</a>
        
    </span>
    <span class="pagecount">
        <a class="ui-link">@ViewBag.pageIndex/@ViewBag.totalPage</a>
    </span>
    <span>
        <a class="ui-link pageNextlink">没有了</a>
    </span>
</div>
    <input type="hidden"  class="hidpageindexnewsListpage" value="@ViewBag.pageIndex" />//当前页码
    <input type="hidden"  class="hidtotalPagenewsListpage" value="@ViewBag.totalPage" />//总页码
    <script type="text/javascript">
        loadPrevNextBut("Article", "productsList_@(ViewBag.classID)page", "@ViewBag.classname", "@ViewBag.newslistaction", "ProductsList", "@ViewBag.classID", "hasImageurl","@ViewBag.topclass"); 
    </script>
}
<!--</div>新产品结束-->  
