 
@using Webdiyer.WebControls.Mvc
@using Maticsoft.Common;
@model PagedList<Maticsoft.Model.CMS.Video>
@if (Model != null)
{
    <header class="header view">
        <span class="nowposition">
            <a href="javascript:;" onclick="pageload('Home','index','首页','_Index', '_Index');" class="ui-link">首页</a>
            <a href="javascript:;"   class="ui-link">视频</a>
        </span>
    </header>
    <div class="content content_list">
        @foreach (var item in Model)
        {
           <div class="ax-waterfall-list">
            <a onclick="pageload('Videos','videoDetail@(item.VideoID)','@item.Title','VideoDetail', 'VideoDetail','-1','-1','-1',-1,@item.VideoID)" class="ui-link">
                <div class="img" style="background-image: url(@("/Admin/CMS/Video/Upload" + item.ImageUrl));">
                    <img src="@("/Admin/CMS/Video/Upload" + item.ImageUrl)" alt="@item.Title">
                </div>
                <div class="title">
                    <h3>@item.Title</h3>
                    <time pubdate="pubdate" datetime="@item.CreatedDate.ToString("yyyy-MM-dd")"> 发布时间 @item.CreatedDate.ToString("yyyy-MM-dd")</time>
                </div>
            </a>
        </div>
        }
       
    </div>
    <div class="pagePrevNext controlgroup">
        <span>
            <a onclick="" class="ui-link pagePrevlink">没有了</a>
        </span>
        <span class="pagecount">
            <a class="ui-link">@ViewBag.pageIndex/@ViewBag.totalPage</a>
        </span>
        <span>
            <a onclick="" class="ui-link pageNextlink">没有了</a>
        </span>
    </div>
    
    <input type="hidden"  class="hidpageindexnewsListpage" value="@ViewBag.pageIndex" />//当前页码
    <input type="hidden"  class="hidtotalPagenewsListpage" value="@ViewBag.totalPage" />//总页码
    <script type="text/javascript">
        loadPrevNextBut("Videos", "videosList_page", "视频", "VideosList", "VideosList", "-1");        
     </script>
}