@model List<Maticsoft.Model.Shop.Products.ProductInfo> 
<div class="w980">
        <div class="hp-box bigsale">
            <div class="hp-hd">
                <h2>
                    <a href="javascript:void(0)" title="超值促销"
                       target="_blank">超值促销<span>BIG SALE</span></a></h2>
            </div>
            @if (Model != null && Model.Count > 0)
            {
                <div class="hp-bd">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        if (i == 1)
                         {
                                @* <a title="@Model[i].ProductName" href="@(ViewBag.BasePath)Product/Detail/@Model[i].ProductId"
                       target="_blank">*@
                       <a href="@Model[i].SeoUrl" title="@Model[i].ProductName" target="_blank">
                        <img width="514" height="250" alt="@Model[i].ProductName" 
                             data-lazy="@Maticsoft.Web.Components.FileHelper.GeThumbImage(Model[i].ThumbnailUrl1, "T558X297_")" class="fl" style="margin-right: 5px">
                    </a>
                         }
                        else
                        {
                            @*<a title="@Model[i].ProductName" href="@(ViewBag.BasePath)Product/Detail/@Model[i].ProductId"
                       target="_blank">*@
                        <a href="@Model[i].SeoUrl" title="@Model[i].ProductName" target="_blank">
                        <img width="220" height="250" alt="@Model[i].ProductName" 
                             data-lazy="@Maticsoft.Web.Components.FileHelper.GeThumbImage(Model[i].ThumbnailUrl1, "T220X297_")" class="fl mr10" style="margin-right: 5px">
                    </a>
                        }

                    }
                </div>
            }
            
        </div>
    </div>
