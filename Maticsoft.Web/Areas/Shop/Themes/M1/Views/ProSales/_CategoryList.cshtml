@using Webdiyer.WebControls.Mvc
@model List<Maticsoft.Model.Shop.PromoteSales.GroupBuy>
@{
    string cid = Request.RequestContext.RouteData.Values["cid"] != null ? Request.RequestContext.RouteData.Values["cid"].ToString() : "0";
    string regionId = Request.RequestContext.RouteData.Values["regionId"] != null ? Request.RequestContext.RouteData.Values["regionId"].ToString() : "643";
    string mod = Request.RequestContext.RouteData.Values["mod"] != null ? Request.RequestContext.RouteData.Values["mod"].ToString() : "default";
}
<div class="sortcon-link" style="z-index: 1;" id="fenleilist">
    <span class="title">购&nbsp;&nbsp;物：</span> <a href="@(ViewBag.BasePath)ProSales/GroupBuy/@regionId/0/@mod" cid="0">全部</a> 
    @if (null != Model)
    {
        foreach (var item in Model)
        {
            <a href="@(ViewBag.BasePath)ProSales/@(ViewBag.IsForMembers==true?"SalesForMembers":"GroupBuy")/@regionId/@item.CategoryId/@mod" cid="@item.CategoryId">@item.ProductCategory</a> 
        }
    }
  
    <div class="clr">
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#fenleilist a[cid='@cid']").addClass("current").siblings().removeClass("current");
    });
</script>

