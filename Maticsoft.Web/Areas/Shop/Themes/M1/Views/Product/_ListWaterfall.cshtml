@model List<Maticsoft.Model.Shop.Products.ProductInfoForProductIndex>
@{
    <script type="text/javascript">
        $(function () {
            $.lazyFixedLoadImg('.list-n4', 175, 228);
        });
    </script>

    if (Model != null)
    {
        foreach (var item in Model)
        {
    <li styleid="product_@(item.ProductId)" class="item item-sale">@* <a target="_blank" href="@(ViewBag.BasePath)Product/Detail/@item.ProductId"
                                                            title="@item.ProductName" class="item-desc ForSkuLink">*@
        <a href="@item.SeoUrl" target="_blank" title="@item.ProductName" class="item-desc ForSkuLink">
            <img title="@item.ProductName" alt="@item.ProductName" width="175" height="228" ref="@Maticsoft.Web.Components.FileHelper.GeThumbImage(item.ThumbnailUrl1, "T300X300_")">
            <span class="item-price"><em>@(item.LowestSalePrice.ToString("F"))</em></span>
            @if (item.MarketPrice.HasValue)
            {
                <del>@(item.MarketPrice.Value.ToString("F"))</del>
            }
            <span class="item-title">
                @item.ProductName </span></a>
        <p class="item-brand" style="display: none">
            PINK by Euromoda</p>
    </li>
        }
    }
}
