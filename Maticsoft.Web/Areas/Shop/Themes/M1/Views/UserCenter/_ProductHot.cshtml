@model List<Maticsoft.Model.Shop.Products.ProductInfo>
 <div id="RecommendContent">
                <div class="box maybelike">
                    <div class="hd">
                        <h2>
                            热销爆款</h2>
                    </div>
                    <div class="bd">
                        @if (Model != null)
                        {
                         <ul class="list-m list-m-n5" id="ulTopSaleList">
                            @foreach (var item in Model)
                            {
                             <li  class="item-m"><a href="/Product/Detail/@item.ProductId" target="_blank" title="@item.ProductName">
                                                                   <img class="item-m-pic" width="120" height="92" alt="" src="@Maticsoft.Web.Components.FileHelper.GeThumbImage(item.ThumbnailUrl1, "T120X92_")" onerror="this.onerror='';this.src='/Content/themes/base/Shop/images/none.png'">
                                                                   <span class="item-m-title">@item.ProductName </span></a>
                                <p class="item-m-price">
                                    <span>@item.LowestSalePrice.ToString("F")</span></p>
                            </li>
                   
                            }
                        </ul>
                           
                        }
                       
                    </div>
                </div>
            </div>
