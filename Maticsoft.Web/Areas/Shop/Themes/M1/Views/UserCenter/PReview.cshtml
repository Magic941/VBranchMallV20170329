  @{
      Layout = "/Areas/Shop/Themes/M1/Views/Shared/_UserCenterLayout.cshtml";
  }
@using Maticsoft.Common
@model  List<Maticsoft.Model.Shop.Order.OrderItems>
<link href="/Areas/Shop/Themes/M1/Content/Css/UserCenterStyle.css" rel="stylesheet" type="text/css" /> 
<link href="/Scripts/jquery.upload/fineuploader-3.4.1.css" rel="stylesheet" type="text/css" />
 <script src="/Scripts/jquery.upload/jquery.fineuploader-3.4.1.min.js" type="text/javascript"></script> 
 <script type="text/javascript" src="/Areas/Shop/Themes/M1/Content/Scripts/UserCenter/Review.js"></script> 
 
<ul class="crumb w980">
    <li class="crumb-hp"><a title="首页" href="/">首页</a></li>
    <li><a href="@(ViewBag.BasePath)UserCenter/">我的商城</a> </li>
</ul>

<div class="col-main">  
    <div class="user_dingdantitle">评论</div>   
      <div class="user_right">    
    @if (Model != null)
    {
        foreach (Maticsoft.Model.Shop.Order.OrderItems item in Model)
        {   
            <div class="reviews">
                <div class="review_img">
                    <a href="@(ViewBag.BasePath)Product/Detail/@item.ProductId"    target="_blank">
                        <img title="@item.Name" width="128px" height="130px" src="@Maticsoft.Web.Components.FileHelper.GeThumbImage(item.ThumbnailsUrl, "T115X115_")"    onerror="this.onerror='';this.src='/Content/themes/base/Shop/images/none.png'" >
                    </a>
                    <p><a href="@(ViewBag.BasePath)Product/Detail/@item.ProductId"    target="_blank">@StringPlus.SubString(Globals.HtmlDecode(item.Name), "...", 30, false) </a></p>
                </div>
                <div class="review_a"> 
                    <input type="hidden" value="@item.OrderId" name="orderId" />
                    <input type="hidden" value="@item.ProductId" name="pid" />
                    <input type="hidden" value="@item.Attribute" name="attribute" />
                    <input type="hidden" value="@item.SKU" name="sku" />
                    <div class="lyz_tab_right_w">
                        <a>还可以输入</a><span maxlength="4" name="shengyu" size="3" style="color: #FFDB69; font-size: 17px;"
                                          value="140">500</span><a> 字</a></div>
                    <textarea name="content" cols="70" rows="8" onkeyup="textCounter(this,500)" onkeydown="textCounter(this,500)" ></textarea>
                    <div class="reviewimg-upload">
                        <input type="hidden" value="" name="UploadPhotoPath"/>
                        <input type="hidden" value="" name="UploadPhotoNames"/>
                        <div name="UploadPhoto" style="padding-left: 5px; width:70px; float:left;">
                        </div>
                    </div>
                </div>
            </div>
        }

    }
      <div class="fb f-act  "  style="margin-top:18px;margin-left: 150px;">
                                    <div class="f-input"> 
                                        <input class="btn-important-large" style="margin-top:10px; background-color:red; padding:3px 5px; font-weight: bold;" type="button" value="提交评论" id="btnDraw" onclick="submit();"/> 
                                    </div>
                                    <div class="f-msg">
                                        <div id="divRegTip"></div>
                                    </div>
                                </div>  
       </div> 
 
</div>  

