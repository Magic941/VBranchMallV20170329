<script type="text/javascript">
    function sub(sender) {
        var shipName = $("#ShipName").val();
        if (shipName == "") {
            ShowFailTip("请填写收货人");
            return false;
        }
        var regionId = parseInt($("#hfSelectedNode").val());
        if (regionId == 0 || $("#hfSelectedNode").val() == "") {
            ShowFailTip("请选择所在地区");
            return false;
        }
        var address = $("#Address").val();
        if (address == "") {
            ShowFailTip("请填写详细地址");
            return false;
        }
        var celPhone = $("#CelPhone").val();
        if (celPhone == "") {
            ShowFailTip("请填写手机号码");
            return false;
        }
        var reg = /^[1][3|5|8][0-9]\d{8}$/;
        if (!reg.exec(celPhone)) {
            ShowFailTip("输入有效的手机号码");
            return false;
        }
        $(sender).hide();
        $(sender).next().show();
        var form = $('#FormSubmitAddress');
        $.post(
            form.get(0).action,
            form.serialize(),
            function (data) {
                if (data == "OK") {
                    window.location = '@(ViewBag.BasePath)UserCenter/ShippAddressList';
                } else {
                    ShowFailTip("服务器忙, 请稍后再试!");
                }
            }
        );
            return false;
        }
</script>
